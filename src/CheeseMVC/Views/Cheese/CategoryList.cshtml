@using CheeseMVC.Models
@model IList<CheeseMVC.Models.CheeseCategory>

<h1>Categories</h1>

@if (Model.Count > 0)
{
    <ul>
        @foreach (CheeseCategory cateory in Model)
        {
            <li>
                <a asp-controller="Cheese" 
                   asp-action="Category" 
                   asp-route-categoryID="@cateory.ID">@cateory.Name</a>
            </li>
        }
    </ul>
}