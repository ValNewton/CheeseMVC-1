@using CheeseMVC.ViewModels
@model AddCheeseViewModel

<h1>Add Cheese</h1>

<form asp-controller="Cheese" asp-action="Add" method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description"/>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" asp-items="Model.CheeseTypes"></select>
        <span asp-validation-for="Type"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating"></label>
        <input type="number" min="1" max="5" asp-for="Rating"/>
        <span asp-validation-for="Rating"></span>
    </div>
    <input type="submit" value="Add Cheese"/>
</form>