@using CheeseMVC.Models
@{
}

<h1>MyCheeses</h1>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>

@if (ViewBag.cheeses.Count == 0)
{
    <p>No cheeses yet!</p>
}

<ul>
    @foreach (Cheese cheese in ViewBag.cheeses)
    {
        <li>
            <strong>@cheese.Name</strong>
            (
            <a asp-controller="Cheese"
               asp-action="RemoveSingleCheese"
               asp-route-cheeseId="@cheese.CheeseId">delete</a>
            &nbsp;|&nbsp;
            <a asp-controller="Cheese" 
               asp-action="Edit" 
               asp-route-cheeseId="@cheese.CheeseId">edit</a>
            )
            <p><em>@cheese.Description</em></p>
        </li>
    }
</ul>

